<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/main_fragment_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainWeatherFragment"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_main_weather-cityNameText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="25sp"
            android:gravity="center"
            android:textColor="@color/colorMainText"
            tools:text="Krasnoyarsk"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_main_weather-cityTempText"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"
                android:textColor="@color/colorMainText"
                android:textSize="36sp"
                tools:text="+13.3 Â°C"/>

            <ImageView
                android:id="@+id/fragment_main_weather-imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>